    <script>
        // JavaScript funkcija, kuri parodys telefono numerį paspaudus mygtuką
        function showPhoneNumber() {
            const button = document.getElementById('contactButton');
            if (button) {
                // Pakeičiame mygtuko tekstą į telefono numerį
                button.textContent = '+370 683 58283'; // Pakeiskite į savo realų telefono numerį
                // Pasirenkama: galite padaryti telefono numerį paspaudžiamu
                button.href = 'tel:+37068358283';
                // Pašaliname onclick įvykį, kad numeris nepasikeistų dar kartą paspaudus
                button.onclick = null;
            }
        }
    </script>
